{
  "name": "pizzeria-piamonte",
  "version": "1.0.0",
  "description": "Sistema de gestión para Pizzería Piamonte",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "author": "Pizzería Piamonte",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^17.2.1",
    "sqlite3": "^5.1.7",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "pdfkit": "^0.17.1",
    "pdf-to-printer": "^5.6.0",
    "xlsx": "^0.18.5",
    "nodemailer": "^7.0.5",
    "bonjour-service": "^1.2.1"
  },
  "devDependencies": {
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.piamonte.pizzeria",
    "productName": "Pizzería Piamonte",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "asarUnpack": [
      "node_modules/sqlite3/**/*"
    ],
    "extraResources": [
      { "from": "./piamonte.db", "to": "piamonte.db" },
      { "from": "./.env", "to": ".env" },
      { "from": "./assets/logo.jpg", "to": "assets/logo.jpg" }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}

