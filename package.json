{
  "name": "sistemapizzeriapiamonte",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "Criz (Arccidev)",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "node-thermal-printer": "^4.5.0",
    "nodemailer": "^7.0.5",
    "pdf-to-printer": "^5.6.0",
    "pdfkit": "^0.17.1",
    "sqlite3": "^5.1.7",
    "xlsx": "^0.18.5"
  },
  "build": {
    "appId": "com.piamonte.sistema",
    "productName": "Sistema Pizzeria Piamonte",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "extraResources": [
      {
        "from": "./piamonte.db",
        "to": "piamonte.db"
      },
      {
        "from": "./.env",
        "to": ".env"
      },
      {
        "from": "./assets/logo.jpg",
        "to": "assets/logo.jpg"
      }
    ]
  }
