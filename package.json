{
  "name": "pizzeria-piamonte",
  "version": "1.0.0",
  "description": "Sistema de gestión para Pizzería Piamonte",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": ["electron", "pizzeria", "pos", "punto-de-venta"],
  "author": "Pizzería Piamonte",
  "license": "MIT",
  "dependencies": {
    "sqlite3": "^5.1.7",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "pdfkit": "^0.15.0",
    "bonjour-service": "^1.2.1",
    "xlsx": "^0.18.5",
    "nodemailer": "^6.9.8",
    "pdf-to-printer": "^5.6.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.piamonte.pizzeria",
    "productName": "Pizzería Piamonte",
    "directories": {
      "output": "dist"
    },
    "files": ["**/*", "!node_modules/**/*", "node_modules/sqlite3/**/*"],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    }
  }
}
